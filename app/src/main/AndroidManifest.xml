<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snail.myplantbook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PlantDetails"
            android:label="@string/title_activity_plant_details" />
        <activity
            android:name=".PlantSearch"
            android:label="@string/activity_plant_search" />
        <activity
            android:name=".AddNewPlant"
            android:label="@string/activity_add_new_plant" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlantGridList"
            android:label="@string/title_activity_plant_grid_list"></activity>
    </application>

</manifest>